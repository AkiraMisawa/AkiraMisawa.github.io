extends: default.liquid

title: Effective M++
route: posts
---

{% assign idx = 0 %}
{% for post in posts %}
{% if idx < 5 %}
<article class="blog-list">
  <div class="left">
    <img src="/img/marvelous-candy.jpg" class="corner avi-image"/>
  </div>
  <div class="right">
    <h3><a href="{{ post.path }}">{{ post.title }}</a></h3>
  </div>
</article>
{% endif %}
{% assign idx = idx | plus: 1 %}
{% endfor %}
